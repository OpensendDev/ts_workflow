{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": [
    "src/"
  ],
  "env": {
    "NODE_ENV": "default",
    "DATABASE_URL": "postgres://myuser:mypassword@localhost:5432/mydb"
  },
  "ext": "js,json,ts"
}